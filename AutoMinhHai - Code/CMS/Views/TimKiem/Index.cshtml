
@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="title" ng-controller="showSearchController" ng-show="!(searchText.length > 0)"><i>Xin lỗi! Kết quả tìm kiếm không tồn tại</i></p>

<!--Sản phẩm-->
<section class="muabanxe tuvan" ng-controller="showSearchController">

    <!--Trang chính-->
    <article class="col-xs-12 col-sm-12 col-md-9 col-lg-9 pull-left">
        <!--Các sản phẩm-->
        <div class="cacsanpham">
            <span us-spinner="{radius:15, width:4, length: 8}"></span>
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-show="products.length > 0" style="color: #F44336; font-size: 2em; padding-left: 3em;">Có {{products.length}} sản phẩm</p>
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="products.length > 0" style="color: #F44336; font-size: 2em; padding-left: 3em;">Không có sản phầm nào phù hợp</p>
            <!--Sản phẩm-->
            <div class="sanpham " ng-class="{'sp-1': (index % 2 == 0) , 'sp-2': (index % 2 == 1)}" dir-paginate="(index, value) in products | itemsPerPage:6" ng-show="products.length > 0">
                <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" />

                <!--Thông tin xe-->
                <div class="thongtin">
                    <p class="ten">{{value.title}}</p>
                    <p class="text">Năm sản xuất: {{value.namSX}}</p>
                    <p class="text">Tình trạng: {{value.tinhTrang}}</p>
                    <p class="gia">Giá: {{value.price | number:0}} vnđ</p>
                    <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="xemthem">Xem thêm <i class="fa fa-angle-double-right"></i></a>
                </div>
            </div>
        </div>

        <!--Số trang-->
        <dir-pagination-controls></dir-pagination-controls>
    </article>

    <article class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pull-right">
        <span us-spinner="{radius:15, width:4, length: 8}"></span>
        <!--Các bài viết-->
        <div class="cacbaiviet col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-show="posts.length > 0" style="color: #F44336; font-size: 2em; padding-left: 3em;">Có {{posts.length}} bài viết</p>
            <p class="col-xs-12 col-sm-12 col-md-12 col-lg-12" ng-hide="posts.length > 0" style="color: #F44336; font-size: 2em; padding-left: 3em;">Không có bài viết nào phù hợp</p>
            <!--Bài viết-->
            <div class="baiviet bv-1 col-xs-12 col-sm-6 col-md-6 col-lg-6" dir-paginate="(index, value) in posts | itemsPerPage:6">
                <img ng-src="{{value.image}}" alt="{{value.title}}" class="img-responsive" />

                <!--Tên bài viết-->
                <div class="tieude">
                    <p>{{value.title}}</p>
                    <div class="xemthem">
                        <a href="/bai-viet/{{value.alias}}-{{value.idPost}}">Xem thêm <i class="fa fa-angle-double-right"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!--Số trang-->
        <dir-pagination-controls></dir-pagination-controls>
    </article>
</section>